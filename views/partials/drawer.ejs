        <section class="flex justify-between items-center border-b-1 border-base-100 pb-3">
            <h2 class="text-lg font-medium mx-3 opacity-90">Channels</h2>
            <button class="btn btn-square btn-ghost" id="hide-drawer">
                <svg xmlns="http://www.w3.org/2000/svg" x="0px" y="0px" width="50" height="50" viewBox="0 0 50 50"
                    class="inline-block h-5 w-5 stroke-current fill-current">
                    <path
                        d="M 9.15625 6.3125 L 6.3125 9.15625 L 22.15625 25 L 6.21875 40.96875 L 9.03125 43.78125 L 25 27.84375 L 40.9375 43.78125 L 43.78125 40.9375 L 27.84375 25 L 43.6875 9.15625 L 40.84375 6.3125 L 25 22.15625 Z">
                    </path>
                </svg>
            </button>
        </section>

        <section class="flex items-center rounded-md p-3 hover:bg-base-100 hover:cursor-pointer" id="add-channel">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke-width="2"
                stroke-linecap="round" stroke-linejoin="round" class="inline-block h-5 w-5 stroke-current fill-current">
                <line x1="12" y1="5" x2="12" y2="19" />
                <line x1="5" y1="12" x2="19" y2="12" />
            </svg>
            <p class="text-sm mx-3 font-medium">New Channel</p>
        </section>


        <dialog id="channelModal" class="modal">
            <div class="modal-box max-w-[300px]">
                <div class="flex justify-between">
                    <h3 class="text-lg font-medium mb-3">New Channel</h3>
                </div>

                <fieldset class="fieldset mb-3">
                    <legend class="fieldset-legend opacity-25">Channel Name</legend>
                    <input type="text" class="input" id="name" placeholder="Channel 1" />
                    <p class="label">Channel name is required!</p>
                </fieldset>

                <fieldset class="fieldset mb-3">
                    <legend class="fieldset-legend opacity-25">Code</legend>
                    <div class="flex justify-start items-end gap-x-2 overflow-x-auto" id="code">
                        <input type="number" maxlength="1" class="input input-bordered text-center w-12 h-12" />
                        <span class="font-bold">.</span>
                        <input type="number" maxlength="1" class="input input-bordered text-center w-12 h-12" />
                        <span class="font-bold">.</span>
                        <input type="number" maxlength="1" class="input input-bordered text-center w-12 h-12" />
                        <span class="font-bold">.</span>
                        <input type="number" maxlength="1" class="input input-bordered text-center w-12 h-12" />
                    </div>
                    <p class="label">Code is required!</p>
                </fieldset>

                <div class="modal-action gap-0">
                    <button class="btn btn-primary submit">Submit</button>
                </div>
            </div>

            <form method="dialog" class="modal-backdrop"><button class="modal-close"></button></form>
        </dialog>

